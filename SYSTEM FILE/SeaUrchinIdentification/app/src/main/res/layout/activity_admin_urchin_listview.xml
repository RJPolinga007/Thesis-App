<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardMaxElevation="0dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:background="@drawable/custom_bg">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3.5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/urchinImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/img_urchin"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/urchinNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mauve Heart Urchin"
                android:letterSpacing="0.1"
                android:fontFamily="@font/quicksand_semibold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scientific name: "
                    android:textColor="@color/grey"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/scientific_nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Metalias spatagus"
                    android:textSize="12sp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textStyle="italic"
                    android:textColor="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local name: "
                    android:textColor="@color/grey"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/local_nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paja-Paja"
                    android:textSize="12sp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textStyle="italic"
                    android:textColor="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:textColor="@color/grey"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/urchinDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This urchin is an urchin with a father like an urchin and a mother also like and urchin"
                    android:textSize="12sp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textStyle="italic"
                    android:textColor="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textColor="@color/grey"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/statusTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="NON EDIBLE"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>