<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ViewUrchinDetailsActivity">


    <!--START OF TOP-->
    <LinearLayout
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg"
        android:gravity="center_vertical"
        android:padding="5dp">

        <ImageView
            android:onClick="clickToBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urchin Details"
            android:textSize="20sp"
            android:fontFamily="@font/quicksand_semibold"
            android:alpha="0.8"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/logo" />




    </LinearLayout>

    <View
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:alpha="0.7"/>
    <!--END OF TOP-->

    <TextView
        android:id="@+id/statusTV"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.3"
        android:text="NON - EDIBLE"
        android:textSize="22sp"
        android:fontFamily="@font/quicksand_bold"
        android:textAlignment="center"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusTV">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/img_urchin"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/urchinNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Fire Urchin"
                android:textAllCaps="true"
                android:letterSpacing="0.2"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="22sp"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:alpha="0.9"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="Scientific name:"
                android:fontFamily="@font/quicksand_semibold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/scientific_nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Echinoidea"
                android:letterSpacing="0.2"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="18sp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Local Name:"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/local_nameTV"
                android:paddingEnd="10dp"
                android:paddingStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fire Urchin, Puwa nga Urchin"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="15sp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Description:"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/descriptionTV"
                android:paddingEnd="10dp"
                android:paddingStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lives on sand and rubble sea bottom  in the Indo-Pacific, from the Red Sea to Australia and Southern Japan. Its venom tipped spines, with distinctive globular swellings below the tip, can inflict a painful sting if handled; the pain lasts as long as several hours."
                android:fontFamily="@font/quicksand_regular"
                android:textSize="15sp"/>

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:background="@color/grey"-->
<!--                android:alpha="0.7"-->
<!--                android:layout_marginStart="70dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginBottom="10dp"/>-->

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:gravity="center_vertical">


                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/idTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:letterSpacing="0.2"
                    android:text=""
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_regular"
                    android:textSize="18sp"
                    android:layout_marginEnd="50dp"/>


<!--                <ImageView-->
<!--                    android:id="@+id/deleteIcon"-->
<!--                    android:src="@drawable/delete_icon"-->
<!--                    android:layout_width="25dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:onClick="deleteUrchinOnClick"/>-->


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>