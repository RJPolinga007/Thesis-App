<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUrchin_Information">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sea Urchin App"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close_icon"
            android:onClick="clickToBack"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_bg2"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD INFORMATION"
                    android:textSize="25sp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textAlignment="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name of Sea Urchin"
                    android:textColor="@color/grey"
                    android:alpha="0.7"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/name_urchinET"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:paddingStart="2dp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local Name"
                    android:textColor="@color/grey"
                    android:alpha="0.7"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/local_nameET"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:paddingStart="2dp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scientific Name"
                    android:textColor="@color/grey"
                    android:alpha="0.7"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/scientific_nameET"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:paddingStart="2dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/grey"
                    android:alpha="0.7"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/descriptionET"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:paddingStart="2dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/grey"
                    android:alpha="0.7"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/statusET"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:paddingStart="2dp"
                    android:textColor="#000"/>

                <Button
                    android:id="@+id/addInformationBTN"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Add Information"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_button"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By clicking add button, information will be saved"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:alpha="0.7"
                    android:textSize="11sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>